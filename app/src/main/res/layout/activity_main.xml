<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.bignerdranch.android.cola.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:id="@+id/titulo"
        android:hint="TÃ­tulo"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/autor"
        android:hint="Autor"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/idioma"
        android:hint="Idioma"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contenido"
        />
    <Button
        android:id="@+id/leer"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear archivo"/>

    <Button
        android:id="@+id/borraArchivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Borra Archivo"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/listarArchivos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listar Archivos"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_gravity="center"
        android:id="@+id/listaArchivos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
